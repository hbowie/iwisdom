<?xml version="1.0"?><transformers>  <!-- Transform each XML source file into a corresponding HTML file -->  <transformer>		<xml>		  xml/authors		</xml>		<xmlext>		  xml		</xmlext>		<xsl>		  xslt/authors/author/source/wisdom.xsl		</xsl>		<out>		  html/authors/		</out>	  <outext>		  html		</outext>	</transformer>	<!-- Publish one Web Page for each Source (i.e., book) -->  <transformer>		<xml>		  xml/authors.xml		</xml>		<xsl>		  xslt/authors/author/source/source.xsl		</xsl>		<out>		  html/authors/index.html		</out>	</transformer>	<!-- Publish an Index Web page listing all Sources (books) -->  <transformer>		<xml>		  xml/authors.xml		</xml>		<xsl>		  xslt/authors/authors.xsl		</xsl>		<out>		  html/authors/index.html		</out>	</transformer>	<!-- Publish one Web Page for each Author -->	<transformer>		<xml>		  xml/authors.xml		</xml>		<xsl>		  xslt/authors/author/author.xsl		</xsl>		<out>		  html/authors/index.html		</out>	</transformer>	<!-- Publish an Index Web page listing all Authors -->  <transformer>		<xml>		  xml/authors.xml		</xml>		<xsl>		  xslt/authors/authors.xsl		</xsl>		<out>		  html/authors/index.html		</out>	</transformer>	<!-- Create a javascript include to build an array containing file names for all wisdom -->  <transformer>		<xml>		  xml/authors.xml		</xml>		<xsl>		  xslt/random1.xsl		</xsl>		<out>		  javascript/wisdomarray.js		</out>	</transformer>	<!-- Publish a page for random wisdom -->	<transformer>		<xml>		  xml/authors.xml		</xml>		<xsl>		  xslt/random2.xsl		</xsl>		<out>		  html/random.html		</out>	</transformer>	<!-- Publish an Index Web page listing all Sources -->	<transformer>		<xml>		  xml/authors.xml		</xml>		<xsl>		  xslt/sources.xsl		</xsl>		<out>		  html/sources.html		</out>	</transformer>	<!-- Publish an Index Web page listing all Categories -->	<transformer>		<xml>		  xml/authors.xml		</xml>		<xsl>		  xslt/categories/categories.xsl		</xsl>		<out>		  html/categories/index.html		</out>	</transformer></transformers>